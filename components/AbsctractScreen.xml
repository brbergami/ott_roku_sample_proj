<?xml version="1.0" encoding="utf-8" ?>
<component name="AbstractScreen" extends="Group">
    <script type="text/brightscript" uri="AbstractScreen.brs" />
    <interface>
        <field id="config" type="assocarray" onChange="configureScreen" />
        <field id="screenAction" type="assocarray" />
    </interface>
    <children>
        <Rectangle
            id="background"
            >
            <Label
                id="screenTitle"
                horizAlign="center"
                vertAlign="center"
                font="font:LargeBoldSystemFont"
                />
            <Label
                id="screenDescription"
                horizAlign="center"
                vertAlign="center"
                font="font:MediumSystemFont"
                />
        </Rectangle>
    </children>
</component>
